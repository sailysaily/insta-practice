<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, wrapper_html: { class: 'pt-3' } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, wrapper_html: { class: 'pt-2 pb-2' } %>

</div>

<div class="d-flex justify-content-between align-items-center form-actions pt-2">
    <div>
        <%= f.input :remember_me, wrapper_html: { class: 'rememberme-center' }, as: :boolean if devise_mapping.rememberable? %>
        <%= render "devise/shared/forgotpasswordlink" %>
    </div>
    <%= f.button :submit, "Log in", class:"btn btn-primary px-5" %>
</div>

<% end %>