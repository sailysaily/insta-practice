<div class="container">
  <div class="container-box height-90vh">
    <div class="row d-flex">

      <div class="col-sm-12 col-md-7 height-90vh">
        <div id="logo" class="d-flex justify-content-between align-items-center p-5">
          <%= image_tag "logo.png" %>
        </div>
        <div class="p-5">
          <h2 class="bold">Welcome back! Log in to Instagram </h2>
          <p class="text-muted">See what's new inside!</p>

          <%= render "devise/sessions/form" %>

          <div class="mt-3">
            <p class="d-flex text-secondary mb-0">New to Instgram?&nbsp
              <%= render "devise/shared/links" %>
            </p>
          </div>

        </div>
      </div>

      <div class="col-sm-0 col-md-5 bg-img-overlay">
      </div>

    </div>
  </div>
</div>